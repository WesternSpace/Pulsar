<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Pulsar.Modern.Screens.TextInputDialog.TextInputDialog">
<Border Background="Transparent"
			BorderBrush="rgba(66,77,99,96)"
			BorderThickness="1.5" 
			Width="649" 
			Height="270">
        <StackPanel Background="rgba(37,47,53,96)">
			<TextBlock HorizontalAlignment="Center"
					   Margin="0,40,0,0"
					   FontSize="25"
					   FontWeight="Normal"
					   Text="{Binding Title}"/>
            <TextBox Name="TextInputBox" Margin="46,30,46,0" Height="55" TextChanged="TextInputBox_TextChanged" Text="{Binding Text}"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
				<Button Name="OkButton" Width="264" Height="55" Click="OkButton_Click">Ok</Button>
				<Button Name="CancelButton" Width="264" Height="55" Margin="26,0,0,0" Click="CancelButton_Click">Cancel</Button>
			</StackPanel>
		</StackPanel>
    </Border>
</UserControl>
